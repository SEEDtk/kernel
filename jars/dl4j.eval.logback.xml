<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="LOGFILE" class="ch.qos.logback.core.FileAppender">
        <file>${logfile.name}</file>
        <encoder>
            <pattern>%date [%thread] %-5level %logger{36} %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="LOGFILE"/>
    </root>

</configuration>
